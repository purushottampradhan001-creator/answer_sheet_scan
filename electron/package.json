{
  "name": "answer-sheet-scanning",
  "version": "1.0.0",
  "description": "Offline Answer Sheet Image-to-PDF Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "prebuild": "node build-scripts/prepare-build.js"
  },
  "keywords": [
    "electron",
    "pdf",
    "image-processing"
  ],
  "author": "Answer Sheet Scanning",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.answersheetscanning.app",
    "productName": "Answer Sheet Scanner",
    "directories": {
      "output": "../dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../python/dist",
        "to": "python",
        "filter": ["**/*"]
      },
      {
        "from": "../python/db",
        "to": "python/db",
        "filter": ["**/*"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
